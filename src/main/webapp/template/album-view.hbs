<section id="portfolio" class="container main">
	<ul class="gallery col-3">
{{#each collection}}
		<li>
			<div class="preview">
				<a><img class="colorbox" data-id="{{id}}" data-title="{{name}} alt=" " src="{{photos.0.path}}">
			</a></div>
			<div class="desc">
				<h5>{{name}}</h5>
			</div>
		</li>
{{/each}}
	</ul>
</section>